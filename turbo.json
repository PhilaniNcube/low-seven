{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "@low-seven/shared#build": {
      "cache": false,
      "outputs": []
    },
    "api#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTERAUTH_URL",
        "CORS_ORIGINS",
        "STRIPE_SECRET_KEY",
        "STRIPE_PUBLISHABLE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "TRUSTED_ORIGINS",
        "TURSO_DATABASE_URL",
        "TURSO_AUTH_TOKEN"
      ]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTERAUTH_URL",
        "CORS_ORIGINS",
        "STRIPE_SECRET_KEY",
        "STRIPE_PUBLISHABLE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "TRUSTED_ORIGINS",
        "TURSO_DATABASE_URL",
        "TURSO_AUTH_TOKEN"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "db:up": {
      "cache": false
    },
    "db:stop": {
      "cache": false
    },
    "db:generate:migration": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
